// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",          // ⬅️ change from ESNext
    "target": "ES2020",            // ES2020 is plenty
    "rootDir": "src",              // make sure dist mirrors src
    "outDir": "dist",

    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    // "paths": {
    //   "@core/*": ["core/*"],
    //   "@features/*": ["features/*"]
    // },

    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
